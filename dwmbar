#!/bin/bash

delim="|"
bat=""
battery(){
	num=$(( $(cat /sys/class/power_supply/BAT1/charge_now) * 100  / $(cat /sys/class/power_supply/BAT1/charge_full_design) ))
	plug=$(cat /sys/class/power_supply/BAT1/status)
	if [ "$plug" != "Discharging" ]
	then	
		bat="ğŸ”Œ ${num}% $delim"
	else
		bat="ğŸ”‹ ${num}% $delim"
	fi
}
status(){
	echo " ğŸ”† $(cat /sys/class/backlight/intel_backlight/actual_brightness) $delim ğŸ”Š $(amixer get Master | awk '/Front Left: Playback/ { print $5 }' | sed 's/\[//g;s/\]//g') $delim ğŸ”‹ $(( $(cat /sys/class/power_supply/BAT1/charge_now) * 100  / $(cat /sys/class/power_supply/BAT1/charge_full_design) ))% $delim ï‹› $(uptime | sed 's/.*load average: \([0-9]*\.[0-9][0-9]\),.*/\1/') $delim ï”¸ $(free | awk '/Mem/ { printf "%.2f", $3*100/$2 }')% $delim ï³ $(date '+%a %b %d | ï€— %I:%M %p')"
}

while true; do
	xsetroot -name  "$(status)"

	sleep 1m
done
